<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        tools:context=".MainPageFragment">

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="start"
            android:orientation="horizontal"

            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="50dp">

            <Button
                android:id="@+id/admin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMIN"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights"
                android:fitsSystemWindows="true" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:cardCornerRadius="200dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/view_user_button"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/profile_pic" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="#70000000"/>

                </FrameLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <TextView
            android:id="@+id/main_page_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_layout"
            android:layout_marginTop="16dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="EventSnapQR"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3"
            android:paddingTop="60dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/scan_qr_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Scan QR"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/organize_event_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Organize New Event"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/browse_events_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Browse Events" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
