<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/admin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="ADMIN"
            android:textSize="12sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />
        <ImageView
            android:id="@+id/view_user_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_pic"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_page_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="EventSnapQR"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingTop="60dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/scan_qr_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:layout_marginBottom="8dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/organize_event_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Organize New Event"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/browse_events_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Browse Events"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>