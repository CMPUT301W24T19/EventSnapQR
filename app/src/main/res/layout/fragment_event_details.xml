<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Event Details"
        android:layout_gravity="center"
         />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/event_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/organizer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Organizer"
        app:layout_constraintStart_toStartOf="@+id/event_poster"
        app:layout_constraintTop_toBottomOf="@+id/event_poster" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/organizer_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BCBCBC"
        android:padding="8dp"
       />

    <TextView

        android:layout_gravity="center"
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description"
         />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/description_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BCBCBC"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/announce_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Announcements"
        android:layout_gravity="center"
         />

    <TextView
        android:id="@+id/announce_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#BCBCBC"
        android:padding="8dp" />

    <TextView
        android:id="@+id/max_attendees_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Max Attendees"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/max_attendees_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BCBCBC"
        android:padding="8dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:text="Sign Up"
        android:layout_gravity="center" />

</LinearLayout>
